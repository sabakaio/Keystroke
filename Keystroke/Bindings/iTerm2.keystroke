name: iTerm2

operations:
  - name: Split Vertically
    hotkey: cmd-d

  - name: Split Horizontally
    hotkey: cmd-shift-d

bindings:
  - key: s
    name: split
    bindings:
      - key: s
        name: vertically
        operation: Split Vertically
      - key: v
        name: vertically
        operation: Split Vertically
      - key: h
        name: horizontally
        operation: Split Horizontally
